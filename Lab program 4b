#include <stdio.h>
#include <string.h>

int firstUniqChar(char *s) {
    int freq[256] = {0};  

    for (int i = 0; s[i] != '\0'; i++) {
        freq[s[i]]++;
    }

    for (int i = 0; s[i] != '\0'; i++) {
        if (freq[s[i]] == 1) {
            return i; 
        }
    }

    return -1;
}

int main() {
    char s[1000];

    printf("Enter a string: ");
    fgets(s, sizeof(s), stdin);

    s[strcspn(s, "\n")] = '\0';

    int index = firstUniqChar(s);

    if (index != -1) {
        printf("The first non-repeating character is at index %d.\n", index);
    } else {
        printf("No non-repeating character found.\n");
    }

    return 0;
}

