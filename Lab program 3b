#include <stdio.h>
#define MAX 5  

int queue[MAX];
int front = -1, rear = -1;

int isFull() {
    if ((rear + 1) % MAX == front) {
        return 1;  
    }
    return 0;
}

int isEmpty() {
    if (front == -1) {
        return 1;     }
    return 0;
}

void insert() {
    int value;
    if (isFull()) {
        printf("Queue Overflow! Cannot insert element.\n");
    } else {
        printf("Enter the value to insert: ");
        scanf("%d", &value);
        if (front == -1) {
            front = 0;  
        }
        rear = (rear + 1) % MAX; 
        queue[rear] = value;  
        printf("Element %d inserted successfully.\n", value);
    }
}

void delete() {
    if (isEmpty()) {
        printf("Queue Underflow! Cannot delete element.\n");
    } else {
        printf("Element %d deleted successfully.\n", queue[front]);
        if (front == rear) {
            front = rear = -1;  
        } else {
            front = (front + 1) % MAX;  
        }
    }
}

void display() {
    if (isEmpty()) {
        printf("Queue is empty!\n");
    } else {
        printf("Queue elements: ");
        int i = front;
        while (i != rear) {
            printf("%d ", queue[i]);
            i = (i + 1) % MAX; 
        }
        printf("%d\n", queue[rear]); 
    }
}

int main() {
    int choice;

    while (1) {
        printf("\nCircular Queue Operations Menu:\n");
        printf("1. Insert\n");
        printf("2. Delete\n");
        printf("3. Display\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                insert();
                break;
            case 2:
                delete();
                break;
            case 3:
                display();
                break;
            case 4:
                printf("Exiting program...\n");
                return 0;
            default:
                printf("Invalid choice! Please try again.\n");
        }
    }

    return 0;
}

